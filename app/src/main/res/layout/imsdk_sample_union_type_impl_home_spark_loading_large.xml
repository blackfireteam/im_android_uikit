<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.masonsoft.imsdk.uikit.widget.AspectRatioFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:aspectRatio="1">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/imsdk_sample_home_spark_loading_large_circle_bg"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/imsdk_sample_ic_meet_loading_large_circle_fg_animate"
            android:indeterminateOnly="true" />
    </com.masonsoft.imsdk.uikit.widget.AspectRatioFrameLayout>

</FrameLayout>