<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="#fff2f4f5">

    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="12sp"
        tools:text="17:30" />

    <com.masonsoft.imsdk.uikit.widget.MSIMBaseMessageRevokeStateFrameLayout
        android:id="@+id/message_revoke_state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.masonsoft.imsdk.uikit.widget.MSIMBaseMessageRevokeTextView
            android:id="@+id/message_revoke_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#ffb2b2b2"
            android:textSize="12sp"
            app:received="true" />

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="10dp"
            app:alignItems="flex_start"
            app:flexDirection="row">

            <com.masonsoft.imsdk.uikit.widget.UserCacheAvatar
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                app:layout_flexGrow="0"
                app:layout_flexShrink="0" />

            <TextView
                android:id="@+id/message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/imsdk_uikit_chat_bubble_received"
                android:includeFontPadding="false"
                android:lineSpacingMultiplier="1.2"
                android:minHeight="40dp"
                android:paddingStart="12dp"
                android:paddingTop="10dp"
                android:paddingEnd="12dp"
                android:paddingBottom="10dp"
                android:textColor="#333333"
                android:textSize="15sp"
                app:layout_flexGrow="0"
                app:layout_flexShrink="1"
                tools:text="中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文中文" />
        </com.google.android.flexbox.FlexboxLayout>
    </com.masonsoft.imsdk.uikit.widget.MSIMBaseMessageRevokeStateFrameLayout>
</LinearLayout>