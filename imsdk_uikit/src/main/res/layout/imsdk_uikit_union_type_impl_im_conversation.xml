<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h_line_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <com.masonsoft.imsdk.uikit.widget.MSIMUserInfoAvatar
            android:id="@+id/avatar"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.masonsoft.imsdk.uikit.widget.MSIMConversationTimeView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@id/h_line_1"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/name_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            app:alignItems="center"
            app:layout_constraintBottom_toTopOf="@id/h_line_1"
            app:layout_constraintEnd_toStartOf="@id/time"
            app:layout_constraintStart_toEndOf="@id/avatar">

            <com.masonsoft.imsdk.uikit.widget.MSIMUserCacheName
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="16sp"
                app:layout_flexGrow="0"
                app:layout_flexShrink="1"
                tools:text="大师兄大师兄大师兄大师兄大师兄大师兄大师兄大师兄大师兄大师兄大师兄" />

            <com.masonsoft.imsdk.uikit.widget.MSIMUserInfoGenderView
                android:id="@+id/user_gender"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="5dp"
                app:layout_flexGrow="0"
                app:layout_flexShrink="0"
                tools:src="@drawable/imsdk_uikit_ic_gender_female" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.masonsoft.imsdk.uikit.widget.MSIMConversationUnreadCountView
            android:id="@+id/unread_count_view"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/h_line_1"
            tools:layout_width="18dp" />

        <com.masonsoft.imsdk.uikit.widget.MSIMConversationLastMessage
            android:id="@+id/msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toStartOf="@id/unread_count_view"
            app:layout_constraintStart_toEndOf="@id/avatar"
            app:layout_constraintTop_toBottomOf="@id/h_line_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>