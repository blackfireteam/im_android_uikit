<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#f0f0f0"
    tools:layout_gravity="bottom"
    tools:layout_height="120dp"
    tools:layout_width="90dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/item_media"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/imsdk_sample_button_background_white"
            android:contentDescription="@string/imsdk_sample_empty_text_hint"
            android:scaleType="centerInside"
            tools:src="@drawable/imsdk_sample_ic_input_more_item_media" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:singleLine="true"
            android:textColor="#ff666666"
            android:textSize="12sp"
            tools:text="相册" />
    </LinearLayout>
</FrameLayout>